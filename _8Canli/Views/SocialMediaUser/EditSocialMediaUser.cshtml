@model EntityLayer.Concrete.SocialMediaUser
@{
    ViewBag.Title = "EditSocialMediaUser";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Yazar Düzenleme Sayfası</h2>
<br />
@using(Html.BeginForm("EditSocialMediaUser","SocialMediaUser",FormMethod.Post))
  {
    <div class="form-group">
        @Html.Label("Yazar Id")
        @Html.TextBoxFor(x => x.SocialMediaUserId, new { @class = "form-control" })
        <br />
        @Html.Label("Yazar adı")
        @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.Name)
        <br />
        @Html.Label("Yazar soyadı")
        @Html.TextBoxFor(x => x.Surname, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.Surname)
        <br />
        @Html.Label("Yazar mail")
        @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.Email)
        <br />
        @Html.Label("Yazar şifresi")
        @Html.TextBoxFor(x => x.Password, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.Password)
        <br />
        @Html.Label("Yazar Görsel Linki")
        @Html.TextBoxFor(x => x.Image, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.Image)
        <br />
        @Html.Label("Yazar Ünvan")
        @Html.TextBoxFor(x => x.SocialMediaUserTitle, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.SocialMediaUserTitle)
        
        <br />
        @Html.Label("Yazar hakkında")
        @Html.TextBoxFor(x => x.SocialMediaUserAbout, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.SocialMediaUserAbout)
        <br />
        <button class="btn btn-success">Değişiklikleri Kaydet</button>
    </div>
  }

